<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".controller.ui.CreateEstudianteFragment">

    <TextView
            android:id="@+id/textView_accionUser"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:text="Editar Usuario"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Nombre"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/editText_Name_User_edit"
            app:layout_constraintTop_toBottomOf="@+id/textView_accionUser" android:layout_marginEnd="297dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_Name_User_edit"/>

    <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clave"
            app:layout_constraintStart_toStartOf="@+id/editText_Clave_us"
            android:layout_marginStart="4dp" app:layout_constraintTop_toBottomOf="@+id/editText_Name_User_edit"
            android:layout_marginTop="24dp" android:layout_marginEnd="317dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/editText_Clave_us"/>
    <EditText
            android:id="@+id/editText_Name_User_edit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"/>

    <EditText
            android:id="@+id/editText_Clave_us"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Clave"
            android:inputType="textPassword"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>

    <Button
            android:id="@+id/btn_guardar_Us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Guardar Usuario"
            app:layout_constraintEnd_toEndOf="@+id/editText_Clave_us"
            app:layout_constraintTop_toBottomOf="@+id/editText_Clave_us" android:layout_marginEnd="8dp"
            android:layout_marginStart="12dp" app:layout_constraintStart_toEndOf="@+id/btn_volver_us"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="268dp"/>
    <Button
            android:id="@+id/btn_volver_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Volver"
            app:layout_constraintStart_toStartOf="@+id/editText_Clave_us"
            app:layout_constraintTop_toBottomOf="@+id/editText_Clave_us" android:layout_marginStart="12dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_guardar_Us" android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="268dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>