<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".app.ui.CrearAlumnoFragment">

    <TextView
            android:id="@+id/textView_accionStudent"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Agregar Alumno"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"/>
    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Nombre"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/editText_Name_al"
            app:layout_constraintTop_toBottomOf="@+id/textView_accionStudent"/>
    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cedula"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/editText_Cedula_al"
            app:layout_constraintTop_toBottomOf="@+id/editText_Name_al"/>

    <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Telefono"
            app:layout_constraintStart_toStartOf="@+id/editText_Tel_al"
            app:layout_constraintTop_toBottomOf="@+id/editText_Cedula_al"/>

    <EditText
            android:id="@+id/editText_Name_al"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView6"/>
    <EditText
            android:id="@+id/editText_Cedula_al"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Cedula"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"/>

    <EditText
            android:id="@+id/editText_Tel_al"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Telofono"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintBottom_toTopOf="@+id/textView9" android:layout_marginBottom="8dp"/>

    <Button
            android:id="@+id/btn_guardar_alumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar Alumno"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/CarreraAl" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.163" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="34dp"
            app:layout_constraintStart_toEndOf="@+id/btn_volver_alumno"/>
    <Button
            android:id="@+id/btn_volver_alumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/CarreraAl" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="77dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/btn_guardar_alumno"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/editText_Tel_al"
            app:layout_constraintBottom_toTopOf="@+id/editTextEmail_al" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.148"
            app:layout_constraintVertical_bias="0.6"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextEmail_al"
            android:hint="Email"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" android:layout_marginEnd="146dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView10"/>
    <TextView
            android:text="Fecha de nacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail_al" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextfec_al2" android:layout_marginEnd="226dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Carrera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextfec_al2" android:layout_marginEnd="310dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/CarreraAl" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="228dp"
            android:layout_height="27dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/CarreraAl"
            android:hint="  Debe Cargar Una"
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="8dp"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" android:layout_marginEnd="146dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toTopOf="@+id/btn_guardar_alumno"
            android:textColorHint="@color/colorWhite"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextfec_al2"
            android:hint="Fecha de nacimiento" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.273"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail_al"
            app:layout_constraintBottom_toTopOf="@+id/textView11"/>
    <Button
            android:text="Cargar"
            android:layout_width="110dp"
            android:layout_height="45dp" android:id="@+id/cargarCarrera"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/CarreraAl"
            android:layout_marginEnd="29dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_guardar_alumno"/>
</androidx.constraintlayout.widget.ConstraintLayout>