<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".app.ui.CrearCicloFragment">

    <Spinner android:layout_width="180dp" android:layout_height="42dp" android:id="@+id/ciclos_num"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginVertical="@dimen/cardview_compat_inset_shadow"
             android:layout_marginEnd="176dp" app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="55dp" android:layout_marginTop="8dp"
             app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginBottom="8dp"
             app:layout_constraintBottom_toTopOf="@+id/textView7">
    </Spinner>
    <TextView
            android:id="@+id/textView_accionCycle"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Agregar Ciclo"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Numero"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/textView_accionCycle"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/ciclos_num"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"
            android:layout_marginEnd="298dp" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Año"
            app:layout_constraintStart_toStartOf="@+id/editText_annio"
            android:layout_marginEnd="331dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ciclos_num" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_annio"/>
    <EditText
            android:id="@+id/editText_annio"
            android:layout_width="197dp"
            android:layout_height="38dp"
            android:ems="10"
            android:hint="Año"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.261"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView2"/>
    <Button
            android:id="@+id/btn_guardarCycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar Ciclo"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/btn_volver_cycle"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="76dp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="81dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/btn_volver_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="76dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_guardarCycle" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextFechaInicio"
            android:hint="Fecha de inicio" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.273"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName2"
            android:hint="Fecha final"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="116dp"
            android:layout_marginStart="52dp" android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="149dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.032"/>
    <TextView
            android:text="Fecha de inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            tools:ignore="MissingConstraints" android:layout_marginEnd="262dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_annio" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextFechaInicio"/>
    <TextView
            android:text="Fecha final"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="288dp" tools:ignore="MissingConstraints" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextFechaInicio" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>