<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".app.ui.NotaAlumnoFragment">

    <TextView
            android:id="@+id/nota_es"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nota"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" android:layout_marginEnd="314dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Cedula_al"/>
    <TextView
            android:id="@+id/textView_accionStudent"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Colocar Nota"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"/>
    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Nombre"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/editText_Name_al"
            app:layout_constraintTop_toBottomOf="@+id/textView_accionStudent" android:layout_marginStart="4dp"/>
    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cedula"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" android:layout_marginEnd="314dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_Name_al"/>
    <EditText
            android:id="@+id/editText_Name_al"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintHorizontal_bias="0.432"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.161"/>

    <EditText
            android:id="@+id/editText_Cedula_al"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Cedula"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
    />
    <EditText
            android:id="@+id/nota_esSet"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nota"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/nota_es"/>
    <Button
            android:id="@+id/btn_guardar_alumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar Alumno"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="34dp"
            app:layout_constraintStart_toEndOf="@+id/btn_volver_alumno" android:layout_marginBottom="240dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/nota_esSet"/>
    <Button
            android:id="@+id/btn_volver_alumno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="240dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_guardar_alumno"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/nota_esSet"/>
</androidx.constraintlayout.widget.ConstraintLayout>