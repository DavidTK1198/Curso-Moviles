<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_height="match_parent">


    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="156dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.056" android:layout_marginEnd="191dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameA"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/descrip" android:layout_marginEnd="191dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" android:textSize="20sp"/>
    <TextView
            android:text="time"
            android:layout_width="253dp"
            android:layout_height="250dp" android:id="@+id/descrip"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/nameA" android:layout_marginEnd="89dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp"
    />
    <TextView
            android:text="In Progress"
            android:layout_width="214dp"
            android:layout_height="54dp" android:id="@+id/progress"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/descrip" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp" android:layout_marginEnd="99dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/userA"/>
    <TextView
            android:text="request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/userA"
            app:layout_constraintTop_toBottomOf="@+id/progress" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="45dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="128dp" android:layout_marginEnd="235dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>