<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:backgroundTint="@color/purple_500"
        android:background="@android:drawable/alert_dark_frame">
    <Button
            android:text="Login"
            android:layout_width="128dp"
            android:layout_height="51dp" android:id="@+id/buttonLogin"
            android:layout_marginEnd="158dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="195dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="125dp"
            android:layout_marginTop="66dp" app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            android:backgroundTint="@color/purple_700" app:iconTint="@color/white" android:capitalize="none"
            android:foregroundTint="@color/white"/>
    <EditText
            android:layout_width="253dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPassword"
            android:hint="Password"
            android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmailAddress"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="66dp"
            android:layout_marginEnd="92dp" app:layout_constraintEnd_toEndOf="parent"
            android:textColorHint="@color/white" android:textColorHighlight="@color/white"
            android:textColor="@color/white"/>
    <EditText
            android:layout_width="252dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextEmailAddress"
            android:hint="username"
            android:layout_marginTop="63dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" android:layout_marginBottom="29dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextPassword" android:layout_marginEnd="93dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="66dp" android:textColor="@color/white"
            android:textColorHighlight="@color/white" android:textColorHint="@color/white"/>
    <ImageView
            android:layout_width="123dp"
            android:layout_height="124dp" app:srcCompat="@drawable/user_avatar" android:id="@+id/imageView5"
            tools:layout_editor_absoluteY="113dp" tools:layout_editor_absoluteX="141dp"
            tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>