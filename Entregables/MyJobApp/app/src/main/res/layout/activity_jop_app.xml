<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityJopApp" android:id="@+id/back"
        android:background="@drawable/background">
  <EditText
          android:layout_width="204dp"
          android:layout_height="52dp"
          android:inputType="textPersonName"
          android:text="Name"
          android:ems="10"
          android:id="@+id/nameInput"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="113dp" android:layout_marginEnd="16dp"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="65dp"
          app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginBottom="9dp"
          app:layout_constraintBottom_toTopOf="@+id/lastNameInput"
          android:background="@drawable/edit_text_background"
  />
  <EditText
          android:layout_width="266dp"
          android:layout_height="43dp"
          android:inputType="textPersonName"
          android:text="Last Name"
          android:ems="10"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          android:id="@+id/lastNameInput"
          app:layout_constraintTop_toBottomOf="@+id/nameInput"
          app:layout_constraintStart_toEndOf="@+id/textView5"
          android:layout_marginEnd="18dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
          app:layout_constraintBottom_toTopOf="@+id/address1Input"
          android:background="@drawable/edit_text_background"
          app:layout_constraintHorizontal_bias="1.0"/>
  <EditText
          android:layout_width="280dp"
          android:layout_height="46dp"
          android:inputType="textPersonName"
          android:text="Street Address"
          android:ems="10"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          android:id="@+id/address1Input"
          android:background="@drawable/edit_text_background"
          android:layout_marginBottom="29dp"
          app:layout_constraintBottom_toTopOf="@+id/emailid" android:layout_marginEnd="20dp"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="27dp"
          app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginTop="5dp"
          app:layout_constraintTop_toBottomOf="@+id/lastNameInput"/>
  <Button
          android:text="Logout"
          android:layout_width="123dp"
          android:layout_height="36dp" android:id="@+id/btnBack"
          android:backgroundTint="@color/teal_200"
          android:background="@drawable/button_background"
          android:layout_marginTop="1dp"
          app:layout_constraintTop_toBottomOf="@+id/apply" app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginEnd="144dp" app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="144dp"/>
  <EditText
          android:layout_width="255dp"
          android:layout_height="43dp"
          android:inputType="textPersonName"
          android:text="Position"
          android:ems="10"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          android:id="@+id/positionInput"
          android:background="@drawable/edit_text_background"
          android:layout_marginTop="30dp"
          app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
          android:layout_marginEnd="13dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="25dp"
          app:layout_constraintStart_toEndOf="@+id/pos"/>
  <EditText
          android:layout_width="192dp"
          android:layout_height="43dp"
          android:inputType="numberDecimal"
          android:text="Phone Number"
          android:ems="10"
          android:id="@+id/phoneNumber"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          android:background="@drawable/edit_text_background"
          android:layout_marginTop="19dp"
          app:layout_constraintTop_toBottomOf="@+id/emailid" android:layout_marginEnd="65dp"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="37dp"
          app:layout_constraintStart_toEndOf="@+id/phone"/>
  <EditText
          android:layout_width="279dp"
          android:layout_height="35dp"
          android:inputType="textEmailAddress"
          android:ems="10"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          android:id="@+id/emailid"
          android:background="@drawable/edit_text_background"
          tools:ignore="MissingConstraints" android:layout_marginTop="29dp"
          app:layout_constraintTop_toBottomOf="@+id/address1Input" android:layout_marginEnd="22dp"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="41dp"
          app:layout_constraintStart_toEndOf="@+id/email"/>
  <TextView
          android:text="Name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:id="@+id/textView4"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          android:background="@drawable/edit_text_background"
          android:layout_marginTop="36dp"
          app:layout_constraintTop_toBottomOf="@+id/imageView"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
  />
  <TextView
          android:text="Last Name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:id="@+id/textView5"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="32dp"
          android:background="@drawable/edit_text_background"
          app:layout_constraintTop_toBottomOf="@+id/textView4"
          android:layout_marginTop="36dp"
          app:layout_constraintEnd_toStartOf="@+id/lastNameInput" android:layout_marginEnd="28dp"
  />
  <TextView
          android:text="Address"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:id="@+id/textView6"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          android:background="@drawable/edit_text_background"
          android:layout_marginTop="48dp"
          app:layout_constraintTop_toBottomOf="@+id/textView5"
          app:layout_constraintEnd_toStartOf="@+id/address1Input" android:layout_marginEnd="27dp"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
          app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="39dp"
          app:layout_constraintBottom_toTopOf="@+id/email"/>
  <TextView
          android:text="E mail"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          android:layout_width="wrap_content"
          android:background="@drawable/edit_text_background"
          android:layout_height="wrap_content" android:id="@+id/email"
          android:layout_marginBottom="44dp"
          app:layout_constraintBottom_toTopOf="@+id/phone" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="28dp"
  />
  <TextView
          android:text="Phone Number"
          android:background="@drawable/edit_text_background"
          android:layout_width="wrap_content"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          android:layout_height="wrap_content" android:id="@+id/phone"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="24dp" app:layout_constraintEnd_toStartOf="@+id/phoneNumber"
          android:layout_marginEnd="13dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="52dp"
          app:layout_constraintBottom_toTopOf="@+id/pos"
  />
  <TextView
          android:text="Desired position"
          android:background="@drawable/edit_text_background"
          android:layout_width="wrap_content"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          android:layout_height="wrap_content" android:id="@+id/pos"
          app:layout_constraintEnd_toStartOf="@+id/positionInput"
          android:layout_marginEnd="4dp"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="17dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="53dp"
          app:layout_constraintTop_toBottomOf="@+id/phone"
  />
  <ImageView
          android:layout_width="89dp"
          android:layout_height="45dp" app:srcCompat="@drawable/_095027" android:id="@+id/imageView"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="48dp" android:layout_marginBottom="24dp"
          app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="11dp" app:layout_constraintEnd_toStartOf="@+id/titleJob"
          android:layout_marginEnd="21dp" app:layout_constraintVertical_bias="0.0"/>
  <TextView
          android:text="Job Application"
          android:layout_width="189dp"
          android:textColor="@color/white"
          android:layout_height="26dp" android:id="@+id/titleJob"
          android:foregroundTint="@color/black" app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="34dp" android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginStart="1dp" app:layout_constraintStart_toEndOf="@+id/imageView"
          android:layout_marginBottom="1dp" app:layout_constraintBottom_toTopOf="@+id/textView3"/>
  <TextView
          android:text="My Information"
          android:layout_width="175dp"
          android:layout_height="23dp" android:id="@+id/textView3"
          android:layout_marginTop="4dp"
          app:layout_constraintTop_toBottomOf="@+id/titleJob"
          android:layout_marginBottom="22dp"
          android:textColor="@color/white"
          app:layout_constraintBottom_toTopOf="@+id/nameInput" android:layout_marginEnd="74dp"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="30dp"
          app:layout_constraintStart_toEndOf="@+id/imageView"/>
  <TextView
          android:text="Gender"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:id="@+id/textView2"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          android:layout_marginBottom="29dp"
          app:layout_constraintBottom_toTopOf="@+id/RadioGroup"
          app:layout_constraintEnd_toStartOf="@+id/Skill" android:layout_marginEnd="122dp"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="26dp"/>
  <RadioGroup
          android:layout_width="73dp"
          android:layout_height="91dp"
          android:id="@+id/RadioGroup"
          android:layout_marginTop="30dp"
          app:layout_constraintTop_toBottomOf="@+id/textView2"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
          app:layout_constraintEnd_toStartOf="@+id/btnBack" android:layout_marginEnd="55dp">
    <RadioButton
            android:text="H"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:layout_width="match_parent"
            android:layout_height="32dp" android:id="@+id/H"
    />
    <RadioButton
            android:text="M"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:layout_width="match_parent"
            android:layout_height="33dp" android:id="@+id/M"
    />
    <RadioButton
            android:text="Other"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:layout_width="match_parent"
            android:layout_height="27dp" android:id="@+id/otro"
    />
  </RadioGroup>
  <Button
          android:text="Skills Information"
          android:layout_width="199dp"
          android:layout_height="37dp" android:id="@+id/Skill"
          android:backgroundTint="@color/teal_200"
          android:background="@drawable/button_background"
          android:layout_marginTop="80dp"
          app:layout_constraintTop_toBottomOf="@+id/positionInput"
          android:layout_marginStart="108dp" app:layout_constraintStart_toEndOf="@+id/RadioGroup"/>
  <Button
          android:text="Apply"
          android:layout_width="199dp"
          android:layout_height="37dp" android:id="@+id/apply"
          android:backgroundTint="@color/teal_200"
          android:background="@drawable/button_background"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="199dp" android:layout_marginEnd="13dp" app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
          app:layout_constraintTop_toBottomOf="@+id/Skill" android:layout_marginBottom="27dp"
          app:layout_constraintBottom_toTopOf="@+id/btnBack"/>
  <Switch
          android:text="Remote"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:id="@+id/switch1"
          android:layout_marginTop="32dp"
          app:layout_constraintTop_toBottomOf="@+id/pos"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          tools:ignore="MissingConstraints" android:layout_marginBottom="31dp"
          app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="14dp" app:layout_constraintEnd_toStartOf="@+id/tog"
          android:layout_marginEnd="65dp"/>
  <ToggleButton
          android:text="fullTime"
          android:layout_width="112dp"
          android:textColor="@color/white"
          android:textColorHint="@color/hint_color"
          android:layout_height="43dp" android:id="@+id/tog"
          tools:ignore="MissingConstraints" android:layout_marginTop="13dp"
          app:layout_constraintTop_toBottomOf="@+id/positionInput" android:layout_marginEnd="144dp"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginBottom="22dp" app:layout_constraintBottom_toTopOf="@+id/Skill"/>

</androidx.constraintlayout.widget.ConstraintLayout>