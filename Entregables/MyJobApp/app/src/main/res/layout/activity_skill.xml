<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".SkillActivity" android:background="@drawable/background">

    <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            app:singleSelection="true"
            android:layout_width="333dp"
            android:layout_height="228dp" tools:ignore="MissingConstraints"
            android:layout_marginTop="58dp"
            app:layout_constraintTop_toBottomOf="@+id/backjob" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="43dp" android:layout_marginEnd="35dp" app:layout_constraintEnd_toEndOf="parent"
    >

        <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:text="Kotlin"
                style="@style/CustomChip"
                android:layout_height="wrap_content"/>

        <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:text="Java"
                style="@style/CustomChip"
                android:layout_height="wrap_content"/>

        <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:text="Dart"
                android:layout_height="wrap_content"
                style="@style/CustomChip"
        />


        <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:text="Go"
                style="@style/CustomChip"
                android:layout_height="wrap_content"/>

    </com.google.android.material.chip.ChipGroup>
    <Button
            android:text="Back"
            android:layout_width="120dp"
            android:background="@drawable/button_background"
            android:layout_height="45dp" android:id="@+id/backjob"
            android:backgroundTint="#00BCD4"
            tools:ignore="MissingConstraints" android:layout_marginEnd="63dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="74dp"
            app:layout_constraintStart_toEndOf="@+id/add" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginBottom="53dp"
            app:layout_constraintBottom_toTopOf="@+id/chipGroup"/>
    <Button
            android:text="add"
            android:layout_width="107dp"
            android:layout_height="47dp" android:id="@+id/add"
            android:backgroundTint="@color/teal_200"
            android:background="@drawable/button_background"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" app:layout_constraintEnd_toStartOf="@+id/backjob"
            android:layout_marginEnd="73dp" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginBottom="53dp"
            app:layout_constraintBottom_toTopOf="@+id/chipGroup"/>
    <TextView
            android:text="Add New Skill"
            android:layout_width="167dp"
            android:layout_height="21dp" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            android:layout_marginEnd="116dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/editText"
            android:layout_marginTop="53dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <EditText
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:backgroundTint="@color/white"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="62dp" android:layout_marginEnd="140dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/icons8_skill_100" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="155dp" android:layout_marginEnd="156dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <TextView
            android:text="Skill Information"
            android:textColor="@color/white"
            android:layout_width="113dp"
            android:layout_height="25dp" android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="142dp" android:layout_marginEnd="156dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2" app:layout_constraintHorizontal_bias="1.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>