<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".ActivityJopApp">
    <EditText
            android:id="@+id/nameInput"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_person_svgrepo_com"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/userlogo"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/emailid"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>

    <EditText
            android:id="@+id/country"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_flag_country_svgrepo_com"
            android:ems="10"
            android:hint="Country"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/city" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/emailid" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <EditText
            android:id="@+id/emailid"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_email_svgrepo_com"
            android:ems="10"
            android:hint="E mail"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameInput" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/country" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <EditText
            android:id="@+id/positionInput"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_work_ui_job_svgrepo_com"
            android:ems="10"
            android:hint="Applying for position"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/backJob"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
    <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_phone_svgrepo_com"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zipCodeInput"
            app:layout_constraintBottom_toTopOf="@+id/positionInput" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <EditText
            android:id="@+id/zipCodeInput"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_mail_svgrepo_com"
            android:ems="10"
            android:hint="Zip Code"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/phoneNumber"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/address"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
    <EditText
            android:id="@+id/address"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_address_svgrepo_com"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/city" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/zipCodeInput"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.97" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <EditText
            android:id="@+id/city"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_city_svgrepo_com"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/country" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/address"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="Back to Menu"
            android:layout_width="154dp"
            android:layout_height="47dp" android:id="@+id/backJob"
            android:backgroundTint="@color/teal_200"
            android:background="@drawable/button_background"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/positionInput" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="113dp" android:layout_marginEnd="144dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="157dp"
            android:layout_height="160dp" app:srcCompat="@drawable/foto01" android:id="@+id/userlogo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginBottom="29dp"
            app:layout_constraintBottom_toTopOf="@+id/nameInput" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="115dp" android:layout_marginEnd="139dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>