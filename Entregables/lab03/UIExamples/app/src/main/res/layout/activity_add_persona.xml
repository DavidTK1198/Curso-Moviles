    <EditText
            android:id="@+id/country3"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_flag_country_svgrepo_com"
            android:ems="10"
            android:hint="Country"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/passcreate" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/city3" android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>
    <EditText
            android:id="@+id/emailid3"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_email_svgrepo_com"
            android:ems="10"
            android:hint="E mail"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/name4"
            app:layout_constraintBottom_toTopOf="@+id/passcreate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp" android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
    <EditText
            android:id="@+id/positionInput3"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_work_ui_job_svgrepo_com"
            android:ems="10"
            android:hint="Applying for position"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumber3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp" android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup" android:layout_marginBottom="4dp"/>
    <EditText
            android:id="@+id/phoneNumber3"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_phone_svgrepo_com"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/zipCodeInput3"
            app:layout_constraintBottom_toTopOf="@+id/positionInput3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="4dp" android:layout_marginTop="4dp"/>
    <EditText
            android:id="@+id/zipCodeInput3"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_mail_svgrepo_com"
            android:ems="10"
            android:hint="Zip Code"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/address3"
            app:layout_constraintBottom_toTopOf="@+id/phoneNumber3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>

    <EditText
            android:id="@+id/name4"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_person_svgrepo_com__2_"
            android:ems="10"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/nameInput3"
            app:layout_constraintBottom_toTopOf="@+id/emailid3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp" android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
    <EditText
            android:id="@+id/address3"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_address_svgrepo_com"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/city3"
            app:layout_constraintBottom_toTopOf="@+id/zipCodeInput3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
    <EditText
            android:id="@+id/city3"
            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_city_svgrepo_com"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/country3"
            app:layout_constraintBottom_toTopOf="@+id/address3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp" android:layout_marginEnd="27dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="43dp"
            app:srcCompat="@drawable/ic_create_group_svgrepo_com"
            android:id="@+id/imageView9"
            android:layout_marginEnd="175dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="133dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/titleJob3" tools:ignore="VectorDrawableCompat"
            android:tint="@color/black" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <EditText
            android:id="@+id/passcreate"
            android:layout_width="372dp"
            android:layout_height="51dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_password_svgrepo_com"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/emailid3"
            android:layout_marginEnd="23dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/country3" android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>
    <TextView
            android:text="Create New User"
            android:layout_width="154dp"
            android:layout_height="33dp" android:id="@+id/titleJob3"
            android:foregroundTint="@color/black"
            android:textSize="20sp"
            android:layout_marginEnd="123dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/nameInput3" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="63dp" app:srcCompat="@drawable/ic_back_arrow_svgrepo_com"
            android:id="@+id/backcrud"
            android:tint="@color/purple_700" style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/positionInput3"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="21dp"
            android:layout_marginStart="61dp" app:layout_constraintStart_toEndOf="@+id/radioGroup"
            app:layout_constraintEnd_toStartOf="@+id/createUser" android:layout_marginEnd="11dp"/>
    <RadioGroup
            android:layout_width="141dp"
            android:layout_height="59dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/positionInput3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp" android:id="@+id/radioGroup"
            app:layout_constraintEnd_toStartOf="@+id/backcrud" android:layout_marginEnd="16dp">
        <RadioButton
                android:text="Standard"
                android:layout_width="match_parent"
                android:layout_height="31dp" android:id="@+id/radioButton4"
                android:textColor="@color/black"/>
        <RadioButton
                android:text="Administrador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton3"
                android:textColor="@color/black"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>