            android:layout_width="367dp"
            android:layout_height="44dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_person_svgrepo_com"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/titleJob3"
            app:layout_constraintBottom_toTopOf="@+id/name4"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.809" app:layout_constraintStart_toStartOf="parent"
